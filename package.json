{
  "name": "team-plan",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node build/server.js",
    "lint": "eslint . --ext=.ts",
    "test:integration": "node -r ts-node/register/transpile-only bin/test.ts integration",
    "test:unit": "node -r ts-node/register/transpile-only bin/test.ts unit",
    "test:ci": "concurrently \"npm:test:integration\" \"npm:test:unit\"",
    "format": "prettier --write .",
    "dockerAttach": "docker exec -it adonis_app /bin/sh",
    "dockerAttachRedis": "docker exec -it redis /bin/sh",
    "dockerAttachPostgres": "docker exec -it postgres /bin/sh"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.3.0",
    "@faker-js/faker": "^6.1.2",
    "@japa/expect": "^1.1.4",
    "@japa/run-failed-tests": "^1.0.7",
    "@japa/runner": "^2.0.6",
    "@japa/spec-reporter": "^1.1.12",
    "@symfony/webpack-encore": "^1.8.2",
    "@types/source-map-support": "^0.5.4",
    "@types/uuid": "^8.3.4",
    "adonis-preset-ts": "^2.1.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "5.1.1",
    "pino-pretty": "^7.6.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "~4.5",
    "youch": "^3.1.1",
    "youch-terminal": "^2.1.3"
  },
  "dependencies": {
    "@adonisjs/ally": "^4.1.2",
    "@adonisjs/auth": "^8.0.12",
    "@adonisjs/core": "^5.4.0",
    "@adonisjs/lucid": "^17.1.1",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/session": "^6.1.0",
    "@adonisjs/shield": "^7.0.0",
    "@adonisjs/view": "^6.1.0",
    "luxon": "^2.3.1",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "phc-bcrypt": "^1.0.7",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  }
}
